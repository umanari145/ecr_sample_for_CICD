server {
    listen $PORT;
    server_name  fm-liveworks-dev-a026e0497a8e.herokuapp.com;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}
